

<div class="container form-container text-center" id="new-dog">
  <div class="row">
    <div class="col-xs-12">
      <%= simple_form_for @run, remote: true do |f| %>
        <div class="form-inputs">
          <% if @dogs.size > 1 %>
            <div class="form-text-inputs">
              <%= f.input :dog_id, label: false, prompt: "Which dog would you like to run?", collection: @dogs %>
            </div>
          <% elsif @dogs.size == 1 %>
            <h2>Booking a run for <%= @dogs.first.name %></h2>
            <br>
            <%= f.input :dog_id, as: :hidden %>
          <% elsif @dogs.size == 0 %>
            <div class="form-text-inputs">
              <%= f.input :dog_id, label: false, prompt: "You forgot to upload your dog!", collection: @dogs %>
              <%= link_to 'upload new dog', new_dog_path %>
            </div>
          <% end %>
          <% if @dogs.size > 0 %>
          <div class="form-text-inputs">
            <%= f.input :duration, label: false, prompt: "How many minutes?", collection: [10, 20, 30] %>

            <%= f.input :address, label: false, placeholder: "Pick-up Location" %>

            <div class="map-style">
              <div id="map" style="width: 300px; height: 200px;"></div>
            </div>

          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, value: "See Summary", class: "btn btn-primary btn-width-to-fit" %>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div id="modal-container">
  <% unless @run.new_record? %>
    <%= render "modal" %>
  <% end %>
</div>

