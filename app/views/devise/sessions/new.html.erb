<div class="page-wrapper form-container text-center">
    <div class=".col col-xs-12">


      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="form-text-inputs">
          <%= f.input :email, label:false, placeholder: "Email", required: false, autofocus: true %>
          <br>
          <%= f.input :password, label:false, placeholder: "Password", required: false %>
        </div>
        <br>
        <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

        <!-- <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'> -->
        <div class="container-checkbox">
          <input value="1" name="user[remember_me]" type="checkbox" id="cbtest" />

          <label for="cbtest" class="check-box"><br></label>

          <label for="cbtest" id="label-checkbox">Remember me</label>

        </div>


      </div>

      <div class="form-actions">
        <%= f.button :submit, "LOG IN" %>
      </div>
      <% end %>
      <br><br><br>
      <%= render "devise/shared/links" %>

    </div>
</div>






