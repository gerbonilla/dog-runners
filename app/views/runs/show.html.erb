<div class="container box-container">
  <div class="row">
    <div class="col col-xs-12">
      <div class="dog-runner-box box-big white-border-bottom">


        <% if @run.status == "pending" %>

        <div class="text-left">

          <% if @dog.photo %>
          <%= cl_image_tag(@dog.photo.path, :class => 'img-circle white-border', :id => 'logo', style:"height: 140px;") %>
          <% else %>
          <%= image_tag "dog_avatar.png", {class: "img-circle white-border", id: "logo", style: "height: 140px;"}%>
          <% end %>
          <br>
          <h3><%= @dog.name %></h3>
        </div>

        <% else %>

        <div id="run-avatar">

          <span id="dog-avatar">

           <% if @dog.photo %>
           <%= cl_image_tag(@dog.photo.path, :class => 'img-circle white-border', :id => 'logo', style:"height: 140px;") %>
           <% else %>
           <%= image_tag "dog_avatar.png", {class: "img-circle white-border", id: "logo", style: "height: 140px;"}%>
           <% end %>

         </span>

         <span id="runner-avatar">
          <% if @user.photo %>
          <%= cl_image_tag(@user.photo.path, :class => 'img-circle white-border', :id => 'logo', style:"height: 140px; width: 140px;") %>
          <% else %>

          <%= image_tag "runner_avatar.png", {class: "img-circle white-border", id: "logo", style: "height: 140px;"}%>
          <% end %>
        </span>
      </div>
      <br>

      <h3><%= @dog.name %> & <%= @user.first_name %></h3>
      <% end %>
    </div>


      <% if @run.status == "pending" || @run.status == "pre_pending" %>

      <div class="dog-runner-box">
        <div class="progress">
          <div class="progress-bar progress-bar-success progress-bar-striped tab-active" style="width: 25%">pending
          <br><br>
          <span id="status-smybol"><%= image_tag "sitting.png" %></span>
        </div>
        <div class="progress-bar progress-bar-success tab-future" style="width: 25%">confirmed
          <span class="sr-only">20% Complete (warning)</span>
        </div>
        <div class="progress-bar progress-bar-success progress-bar-striped tab-future" style="width: 25%">started
          <span class="sr-only">10% Complete (danger)</span><br><br>
        </div>
        <div class="progress-bar progress-bar-success tab-future" style="width: 25%">finished
          <span class="sr-only">35% Complete (success)</span>
        </div>
        </div>
        <div class="col-xs-12 run-status">We're searching for your runner...</div><br>

        <div class="dog-runner-box box-small" style="width: 60%;">
          <%= link_to "cancel", runs_path, method: :get, class: "btn btn-primary btn-md"%>
        </div>
      </div>


      <% elsif @run.status == "confirmed" || @run.status == "coming" || @run.status == "arrived" %>

          <div class="dog-runner-box">
        <div class="progress">
          <div class="progress-bar progress-bar-success tab-passed" style="width: 25%">pending
        </div>
        <div class="progress-bar progress-bar-success progress-bar-striped tab-active" style="width: 25%">confirmed
          <span class="sr-only">20% Complete (warning)</span><br><br>
          <span id="status-smybol"><%= image_tag "standing.png" %>
        </div>
        <div class="progress-bar progress-bar-success progress-bar-striped tab-future" style="width: 25%">started
          <span class="sr-only">10% Complete (danger)</span>
        </div>
        <div class="progress-bar progress-bar-success tab-future" style="width: 25%">finished
          <span class="sr-only">35% Complete (success)</span>
        </div>
        </div>
        <div class="col-xs-12 run-status"><%= @user.first_name %> accepted your run request...</div><br>

        <div class="dog-runner-box box-small text-center" style="width: 60%;">
          <%= link_to "message #{@user.first_name}", runs_path, method: :get, class: "btn btn-primary btn-md" %>
        </div>
      </div>

      <% elsif @run.status == "started"%>

      <div class="dog-runner-box">
       <div class="progress">
       <div class="progress-bar progress-bar-success tab-passed" style="width: 25%">pending
          <span class="sr-only">35% Complete (success)</span>
        </div>
        <div class="progress-bar progress-bar-success tab-passed" style="width: 25%">confirmed
          <span class="sr-only">20% Complete (warning)</span>
        </div>
        <div class="progress-bar progress-bar-success progress-bar-striped tab-active" style="width: 25%">started
          <span class="sr-only">10% Complete (danger)</span><br><br>
          <span id="status-smybol"><%= image_tag "run.png" %></span>
        </div>
        <div class="progress-bar progress-bar-success tab-future" style="width: 25%">finished
          <span class="sr-only">35% Complete (success)</span>
        </div>
         </div>
      <div class="col-xs-12 run-status text-center">the run just started...</div><br>

       <div class="dog-runner-box box-small" style="width: 60%;">
          <%= link_to "Map of the run", run_gps_path(@run), method: :get, class: "btn btn-primary btn-md" %>
        </div>

       </div>



      <% elsif @run.status == "ended"%>

       <div class="dog-runner-box">
       <div class="progress">

         <div class="progress-bar progress-bar-success tab-passed" style="width: 25%">pending
          <span class="sr-only">35% Complete (success)</span>
        </div>
        <div class="progress-bar progress-bar-success tab-passed" style="width: 25%">confirmed
          <span class="sr-only">20% Complete (warning)</span>
        </div>
        <div class="progress-bar progress-bar-success tab-passed" style="width: 25%">started
          <span class="sr-only">10% Complete (danger)</span>
        </div>
        <div class="progress-bar progress-bar-success progress-bar-striped tab-active" style="width: 25%;">finished
          <span class="sr-only">35% Complete (success)</span><br><br>
          <span id="status-smybol"><%= image_tag "home.png" %>
        </div>
      </div>
      <div class="col-xs-12 run-status">the run is finished...</div><br>

       <div class="dog-runner-box box-small" style="width: 60%;">
          <%= link_to "see run stats", runs_path, method: :get, class: "btn btn-primary btn-md" %>
        </div>

 </div>
      <% end %>

    </div>

  </div>
</div>
</div>



<!-- refresh page every few seconds....(to change running status with admin) -->






