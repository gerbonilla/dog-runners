<div class="navbar-wagon">

  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "icon-blue-dog.png", class: "opacity-80" %>
  <% end %>

  <%= render 'shared/flashes' %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

    <!-- These were removed: Links when logged in -->


    <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <div class="dropdown">

       <!-- Removed avatar and added hamburger on both mobile and desktop views -->
       <!--  <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %> -->
       <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
       <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to root_path do %><i class="fa fa-home"></i> Home<% end %>
        </li>
        <li>
          <%= link_to runs_path do %><i class="fa fa-list"></i> Run History<% end %>
        </li>
        <li>
          <%= link_to profile_path(current_user) do %><i class="fa fa-user"></i> Profile<% end %>
        </li>
        <li>
          <%= link_to "#" do %><i class="fa fa-question-circle"></i> Help Center<% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %><i class="fa fa-sign-out"></i> Log Out<% end %>
        </li>
      </ul>
    </div>
  </div>
  <% else %>
  <!-- Login link (when logged out) -->
  <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
  <% end %>
</div>

<!-- Dropdown list appearing on mobile only -->
<div class="navbar-wagon-item hidden-md hidden-lg">
  <div class="dropdown">
    <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
    <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
      <% if current_user %>
      <li>
        <%= link_to root_path do %><i class="fa fa-home"></i> Home<% end %>
      </li>
      <li>
        <%= link_to profile_path(current_user) do %><i class="fa fa-user"></i> Profile<% end %>
      </li>
      <li>
        <%= link_to runs_path do %><i class="fa fa-list"></i> Run History<% end %>
      </li>
      <li>
        <%= link_to "#" do %><i class="fa fa-question-circle"></i> Help Center<% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, method: :delete do %><i class="fa fa-sign-out"></i> Log Out<% end %>
      </li>
      <% else %>
      <li>
        <%= link_to new_user_session_path do %><i class="fa fa-user"></i> Log In<% end %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
</div>


