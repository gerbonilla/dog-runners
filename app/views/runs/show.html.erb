<div class="container box-container">
  <div class="row">
    <div class="col col-xs-12">
      <div class="dog-runner-box box-big white-border-bottom">
        <% if @run.status == "pending" %>
          <h3 class="text-left">
            <span><%= image_tag "Snoopy.jpg", {class: "img-circle white-border", id: "logo", style: "height: 140px; width: 140px;"}%></span>
            &nbsp; <%= @dog.name %>
          </h3 class="text-left">
        <% else %>
          <h3 class="text-left">
          <span><%= image_tag "Snoopy.jpg", {class: "img-circle white-border", id: "logo", style: "height: 140px;"}%></span>
          &nbsp; <%= @dog.name %> and <%= @user.first_name %>
          <span><%= image_tag "peter.jpg", {class: "img-circle white-border", id: "logo", style: "height: 140px;"}%></span>
          </h3 class="text-left">
        <% end %>
      </div>

      <div class="dog-runner-box">

        <% if @run.status == "pending"%>
        <p><span><%= image_tag "sitting.png" %></span> We're searching for your runner...</p>
        <% elsif @run.status == "confirmed"%>
        <p><span><%= image_tag "standing.png" %></span> <%= @user.first_name %> just accepted your run request...</p>
        <% elsif @run.status == "coming"%>
        <p><span><%= image_tag "standing.png" %></span> <%= @user.first_name %> is on the way...</p>
        <% elsif @run.status == "arrived"%>
        <p><span><%= image_tag "pickup2.png" %></span> <%= @user.first_name %> has arrived...</p>
        <% elsif @run.status == "started"%>
        <p><span><%= image_tag "run.png" %></span> the run has started...</p>
        <% elsif @run.status == "ended"%>
        <p><span><%= image_tag "home.png" %></span> the run is finished...</p>
        <% else @run.status == "cancelled"%>
        <p><span><%= image_tag "sad-dog2.png" %></span> We're sorry, your run was cancelled...</p>
        <% end %>

      </div>


      <% if @run.status == "arrived" || @run.status == "started" || @run.status == "ended" %>
      <!-- start LocaToWeb embed code -->
        <div class="dog-runner-box box-small">
          <%= link_to "Map of the run", run_gps_path(@run), method: :get, class: "btn btn-primary btn-md" %>
        </div>
      <% else %>
         <div class="dog-runner-box box-small">
           <p class="btn btn-primary btn-md">Map of the run</p>
        </div>
      <% end %>


        <div class="dog-runner-box box-small">
          <%= link_to "Run history", runs_path, method: :get, class: "btn btn-primary btn-md" %>
        </div>

      </div>
    </div>
  </div>

<!-- refresh page every few seconds....(to change running status with admin) -->
  <%= content_for :after_js do %>
  <script>
    $(function(){
      setTimeout(function(){
   window.location.reload(1);
}, 5000);
    });
  </script>
  <% end %>



